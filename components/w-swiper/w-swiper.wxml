<!--components/w-swiper/w-swiper.wxml-->
<swiper
    circular
    autoplay
    interval="3500"
    indicator-dots
    indicator-active-color="#d4237a">
  <block wx:for="{{banners}}" wx:for-index="i" wx:for-item="item" wx:key="{{i}}">
    <swiper-item>
      <image src="{{item.image}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
